#include<iostream>
using namespace std;

int pow(int x) {
	return x * x;
}


int main() {

	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);

	int R;
	const double Pi = 3.14159265358979323846;
	cin >> R;

	cout << fixed;
	cout.precision(6);
	cout << pow(R)*Pi << "\n" << pow(R) * 2.0;// 택시 원은 유클리드 마름모


}
