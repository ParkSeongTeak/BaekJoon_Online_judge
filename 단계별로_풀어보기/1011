#include<iostream>
#include<vector>
#include<math.h>
using namespace std;


int main() {
	
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);
	
	int T;
	long X, Y, dif, Pow, cnt = 0;
	cin >> T;
	for (int i = 0; i < T; i++) {

		cin >> X>>Y;
		dif=Y - X;
		while (cnt * cnt < dif) {
			cnt++;
		}
		cnt -= 1;
		if (dif - cnt * cnt > cnt)
			cnt = (2 * cnt - 1) + 2;
		else if (dif - cnt * cnt > 0)
			cnt = (2 * cnt - 1) + 1;
		else if (dif - cnt * cnt < 0)
			cout << "Fuck!!";
		
		cout << cnt<<"\n";

		cnt = 0;
	}
}
