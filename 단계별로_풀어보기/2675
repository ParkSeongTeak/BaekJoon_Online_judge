#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>

int main() {
	int T, R, cnt = 0;
	char Str[20] = {0,};
	scanf("%d", &T);
	for (int i = 0; i < T; i++) {
		cnt = 0;
		scanf("%d", &R);
		scanf("%s", Str);

		while (Str[cnt] != 0) {
			for (int i = 0; i < R; i++) {
				printf("%c", Str[cnt]);
			}
			cnt++;
		}
		printf("\n");
	}
	


}
